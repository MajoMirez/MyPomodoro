            android:positiveButtonText="@string/ok"
            android:negativeButtonText="@string/cancel"
            android:defaultValue="30"
            />

        <com.example.majo.mypomodoro.NumberPickerPreferences.NumberPickerPref2_Break
            android:key="test4"
            android:title="Pomodoros por Ciclo"
            android:summary="(test NumberPicker)"
            android:dialogMessage="Cantidad de Pomodoros por ciclo"
            android:positiveButtonText="@string/ok"
            android:negativeButtonText="@string/cancel"
