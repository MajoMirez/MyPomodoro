    <PreferenceCategory
        android:title="Ciclos de Pomodoro">

        <com.example.majo.mypomodoro.NumberPickerPreferences.NumberPickerPref1_Work
            android:key="test1"
            android:title="Tiempo de Trabajo"
            android:summary="(test NumberPicker)"
            android:dialogMessage="Tiempo de trabajo en minutos"
            android:positiveButtonText="@string/ok"
            android:negativeButtonText="@string/cancel"
